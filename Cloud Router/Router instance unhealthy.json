{
    "displayName": "Router instance unhealthy",
    "documentation": {
        "content": "This indicates your Cloud Router is offline and routing is completely impacted.",
        "mimeType": "text/markdown"
    },
    "userLabels": {
        "resource": "cloud-router"
    },
    "conditions": [
        {
            "displayName": "Router availability",
            "conditionThreshold": {
                "filter": "resource.type = \"gce_router\" AND metric.type = \"router.googleapis.com/router_up\"",
                "aggregations": [
                    {
                        "alignmentPeriod": "300s",
                        "crossSeriesReducer": "REDUCE_MEAN",
                        "groupByFields": [
                            "resource.label.project_id",
                            "resource.label.router_id",
                            "metadata.system_labels.name"
                        ],
                        "perSeriesAligner": "ALIGN_MEAN"
                    }
                ],
                "comparison": "COMPARISON_LT",
                "duration": "0s",
                "trigger": {
                    "count": 1
                },
                "thresholdValue": 0
            }
        }
    ],
    "alertStrategy": {
        "autoClose": "86400s",
        "notificationPrompts": [
            "OPENED",
            "CLOSED"
        ]
    },
    "combiner": "OR",
    "enabled": true,
    "notificationChannels": [],
    "severity": "CRITICAL"
}