{
    "displayName": "Composer scheduler unhealthy",
    "documentation": {
        "content": "This alert means the Airflow scheduler isn’t doing its job — it may not be picking up DAG runs or scheduling tasks. This usually affects new DAG executions and task dependencies. Investigate the logs to diagnose and consider restarting the scheduler.",
        "mimeType": "text/markdown"
    },
    "userLabels": {
        "resource": "cloud-composer"
    },
    "conditions": [
        {
            "displayName": "Composer scheduler unhealthy",
            "conditionThreshold": {
                "filter": "resource.type = \"cloud_composer_environment\" AND metric.type = \"composer.googleapis.com/environment/scheduler_heartbeat_count\"",
                "aggregations": [
                    {
                        "alignmentPeriod": "60s",
                        "crossSeriesReducer": "REDUCE_SUM",
                        "groupByFields": [
                            "resource.label.environment_name"
                        ],
                        "perSeriesAligner": "ALIGN_MEAN"
                    }
                ],
                "comparison": "COMPARISON_LT",
                "duration": "0s",
                "trigger": {
                    "count": 1
                },
                "thresholdValue": 4
            }
        }
    ],
    "alertStrategy": {
        "autoClose": "86400s",
        "notificationPrompts": [
            "OPENED",
            "CLOSED"
        ]
    },
    "combiner": "OR",
    "enabled": true,
    "notificationChannels": [],
    "severity": "CRITICAL"
}