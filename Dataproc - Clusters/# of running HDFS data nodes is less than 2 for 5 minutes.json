{
    "displayName": "# of running HDFS data nodes is less than 2 for 5 minutes",
    "documentation": {
        "content": "Alert when the number of HDFS data nodes that are running inside a cluster is less than 2 for more than 5 minutes. If you want the alert to fire when the number of HDFS data nodes crosses 5 threshold, set the threshold value to 5.",
        "mimeType": "text/markdown"
    },
    "userLabels": {
        "resource": "Dataproc - Clusters"
    },
    "conditions": [
        {
            "displayName": "# of running HDFS data nodes is less than 2 for 5 minutes",
            "conditionThreshold": {
                "filter": "metric.type=\"dataproc.googleapis.com/cluster/hdfs/datanodes\" AND resource.type=\"cloud_dataproc_cluster\"",
                "comparison": "COMPARISON_GT",
                "thresholdValue": 2,
                "duration": "300s",
                "trigger": {
                    "count": 1
                },
                "aggregations": [
                    {
                        "alignmentPeriod": "300s",
                        "perSeriesAligner": "ALIGN_MEAN"
                    }
                ]
            }
        }
    ],
    "alertStrategy": {
        "autoClose": "86400s",
        "notificationPrompts": [
            "OPENED",
            "CLOSED"
        ]
    },
    "combiner": "OR",
    "enabled": true,
    "notificationChannels": [],
    "severity": "WARNING"
}